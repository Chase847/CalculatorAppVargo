<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/clearButton"
        android:layout_width="75dp"
        android:layout_height="82dp"
        android:text="CA"
        tools:layout_editor_absoluteX="74dp"
        tools:layout_editor_absoluteY="615dp" />

    <Button
        android:id="@+id/decimalPointButton"
        android:layout_width="75dp"
        android:layout_height="82dp"
        android:text="."
        tools:layout_editor_absoluteX="256dp"
        tools:layout_editor_absoluteY="615dp" />

    <Button
        android:id="@+id/subtractionButton"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:text="-"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.877"
        app:layout_constraintStart_toEndOf="@+id/divisionButton"
        tools:layout_editor_absoluteY="269dp" />

    <Button
        android:id="@+id/multiplicationButton"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:text="X"
        app:layout_constraintEnd_toStartOf="@+id/additionButton"
        app:layout_constraintHorizontal_bias="0.122"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="269dp" />

    <Button
        android:id="@+id/additionButton"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_marginEnd="112dp"
        android:text="+"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="269dp" />

    <Button
        android:id="@+id/button9"
        android:layout_width="75dp"
        android:layout_height="82dp"
        android:text="9"
        android:onClick="addDigit"
        tools:layout_editor_absoluteX="256dp"
        tools:layout_editor_absoluteY="518dp" />

    <Button
        android:id="@+id/button4"
        android:layout_width="75dp"
        android:layout_height="82dp"
        android:layout_marginEnd="20dp"
        android:onClick="addDigit"
        android:text="4"
        app:layout_constraintEnd_toStartOf="@+id/button5"
        tools:layout_editor_absoluteY="427dp" />

    <Button
        android:id="@+id/button1"
        android:layout_width="75dp"
        android:layout_height="82dp"
        android:layout_marginEnd="20dp"
        android:onClick="addDigit"
        android:text="1"
        app:layout_constraintEnd_toStartOf="@+id/button2"
        tools:layout_editor_absoluteY="334dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="75dp"
        android:layout_height="82dp"
        android:layout_marginEnd="20dp"
        android:onClick="addDigit"
        android:text="2"
        app:layout_constraintEnd_toStartOf="@+id/button3"
        tools:layout_editor_absoluteY="334dp" />

    <Button
        android:id="@+id/button6"
        android:layout_width="75dp"
        android:layout_height="82dp"
        android:layout_marginStart="16dp"
        android:onClick="addDigit"
        android:text="6"
        app:layout_constraintStart_toEndOf="@+id/button5"
        tools:layout_editor_absoluteY="427dp" />

    <Button
        android:id="@+id/button8"
        android:layout_width="75dp"
        android:layout_height="82dp"
        android:text="8"
        android:onClick="addDigit"
        tools:layout_editor_absoluteX="163dp"
        tools:layout_editor_absoluteY="518dp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="75dp"
        android:layout_height="82dp"
        android:layout_marginBottom="8dp"
        android:onClick="addDigit"
        android:text="3"
        app:layout_constraintBottom_toTopOf="@+id/button6"
        tools:layout_editor_absoluteX="256dp" />

    <Button
        android:id="@+id/button5"
        android:layout_width="75dp"
        android:layout_height="82dp"
        android:text="5"
        android:onClick="addDigit"
        tools:layout_editor_absoluteX="163dp"
        tools:layout_editor_absoluteY="427dp" />

    <Button
        android:id="@+id/button0"
        android:layout_width="75dp"
        android:layout_height="82dp"
        android:text="0"
        android:onClick="addDigit"
        tools:layout_editor_absoluteX="163dp"
        tools:layout_editor_absoluteY="615dp" />

    <Button
        android:id="@+id/button7"
        android:layout_width="75dp"
        android:layout_height="82dp"
        android:text="7"
        android:onClick="addDigit"
        tools:layout_editor_absoluteX="74dp"
        tools:layout_editor_absoluteY="518dp" />

    <Button
        android:id="@+id/divisionButton"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_marginEnd="20dp"
        android:text="/"
        app:layout_constraintEnd_toStartOf="@+id/additionButton"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="269dp" />

    <TextView
        android:id="@+id/inputTV"
        android:layout_width="254dp"
        android:layout_height="64dp"
        android:layout_marginTop="60dp"
        android:text=""
        android:textAlignment="center"
        android:textSize="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/historyTV1"
        android:layout_width="95dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:text=""
        app:layout_constraintTop_toBottomOf="@+id/inputTV"
        tools:layout_editor_absoluteX="236dp" />

    <TextView
        android:id="@+id/historyTV2"
        android:layout_width="95dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:text=""
        app:layout_constraintTop_toBottomOf="@+id/historyTV1"
        tools:layout_editor_absoluteX="238dp" />

    <Switch
        android:id="@+id/darkLightSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>